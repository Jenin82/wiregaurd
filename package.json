{
  "name": "wiregaurd",
  "version": "1.1.0",
  "description": "Bring up a WireGuard tunnel on Ubuntu runners with automatic teardown.",
  "type": "commonjs",
  "main": "dist/index.js",
  "keywords": [
    "actions", "wiregaurd", "vpn"
  ],
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">=24.0.0"
  },
  "scripts": {
    "build": "tsc",
    "bundle": "pnpm ncc build build/index.js -o dist && pnpm ncc build build/cleanup.js -o dist/cleanup",
    "package": "pnpm build && pnpm bundle"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/exec": "^1.1.1",
    "@actions/io": "^1.1.3"
  },
  "devDependencies": {
    "@types/node": "^24.9.1",
    "@vercel/ncc": "^0.38.4",
    "typescript": "^5.9.3"
  }
}
